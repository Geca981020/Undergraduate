#include <iostream>

using namespace std;
double avg(int, int);
double avg(int, double);
double avg(int, int, double);

int main()
{
	int first, second;
	double third;
	
	cout <<"Enter three numbers: ";
	cin >> first >> second >> third;

	cout << "The mean of two numbers= " << avg(first, second) << endl;
	cout << "The mean of two numbers= " << avg(first, third) << endl;
	cout << "The mean of three numbers= " << avg(first, second, third) << endl;
	

	return 0;
}

double avg(int num1, int num2)
{
	return (num1 + num2)/2.0;
}

double avg(int num1, double num2)
{
	return (num1 + num2)/2.0;
}

double avg(int num1, int num2, double num3)
{
	return (num1 + num2 + num3)/3.0;
}
