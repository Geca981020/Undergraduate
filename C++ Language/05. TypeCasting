#include <iostream>
#include <string>
using namespace std;

int main()
{
	double radius, volume;
	const double PI=3.14;
	// Error: PI=5.14;

	// cout << "Enter a radius: ";
	string st1, st2, st3;
	cin >> st1 >> st2 >> st3;
	cout << st1+" " << st2+" " << st3+": ";

	cin >> radius;

	volume = (4.0/static_cast<double>(3))*PI*radius*radius*radius;
	cout << "The volume is " << volume << endl; 

	bool tf;
	cout << "Is it true?";
	cin >> tf;
	if (tf == true) cout << "Nice \n";
	else cout << "Try again \n";
	return 0;
}
